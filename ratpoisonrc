# Kevin Gisi's .ratpoisonrc

escape C-b

bind c exec rxvt
bind j focusdown
bind h focusleft
bind k focusup
bind l focusright

bind | split
bind - hsplit

bind g exec google-chrome

bind Escape exec ratpoison -c "source /home/gisikw/.ratpoisonrc"

bind F5 exec xbacklight -dec 10
bind F6 exec xbacklight -inc 10
bind Pause exec ratpoison -c "echo $(date)"
bind Print exec ratpoison -c "echo $(upower -i /org/freedesktop/UPower/devices/battery_BATC | grep -E 'time to empty|percentage' | sed 's/.*: *//' | tac | xargs)"
bind m exec ratpoison -c banish && /home/gisikw/.dotfiles/bin/toggle_mouse

startup_message off
exec xsetroot -solid black -cursor_name left_ptr
exec pgrep "rxvt" || rxvt

exec ratpoison -c banish && /home/gisikw/.dotfiles/bin/toggle_mouse
